<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newfragment">

    <TextView
        android:id="@+id/textViewselect"
        android:layout_width="299dp"
        android:layout_height="44dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Select Your Avatar"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/male1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="250dp"
        android:src="@drawable/avatar_m_3" />

    <ImageView
        android:id="@+id/female1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/avatar_f_1" />

    <ImageView
        android:id="@+id/female3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/avatar_f_3" />

    <ImageView
        android:id="@+id/female2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/avatar_f_2" />

    <ImageView
        android:id="@+id/male2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="250dp"
        android:src="@drawable/avatar_m_2" />

    <ImageView
        android:id="@+id/male3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="250dp"
        android:src="@drawable/avatar_m_1" />
</FrameLayout>